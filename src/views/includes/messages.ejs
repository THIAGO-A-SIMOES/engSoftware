<% if (errors.length > 0) { %>

<div class="row">
    <div id="erro1"class="col">
        <div id="erro" class="alert alert-danger"> 
            <% errors.forEach(erro => {%>
                <%= erro %><br>
            <%}); %>
              
        </div>
    </div>
</div>

<% } %>

<% if (success.length > 0) { %>

    <div class="row">
        <div id="success1"class="col">
            <div id="success" class="alert alert-success"> 
                <% success.forEach(success => {%>
                    <%= success %><br>
                <%}); %>
                  
            </div>
        </div>
    </div>
    
    <% } %>



